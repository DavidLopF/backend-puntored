<script>
    const transaccions = JSON.parse(localStorage.getItem('historial'));


    const data = document.getElementById('data');

    transaccions.body.forEach(transaccion => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
            <td>${transaccion.ticket_id}</td>
            <td>${transaccion.transaction_id}</td>
            <td>${transaccion.ticket_number}</td>
            <td>${transaccion.supplierName}</td>
            <td>${transaccion.transaction_date}</td>
        `;
        data.appendChild(tr);
    });

    const volver = document.getElementById('volver');
    volver.addEventListener('click', () => {
        window.location.href = '/api/recharge/panel';
    });













</script>